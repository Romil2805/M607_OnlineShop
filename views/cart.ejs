<%- include('./partials/header') %>

<div class="container mt-5">
    <h2 class="mb-4">Shopping Cart</h2>

    <% if (products.length > 0) { %>
        <div class="card shadow">
            <div class="card-body">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Image</th>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(item => { %>
                            <tr>
                                <td><img src="<%= item.image %>" style="height: 50px;"></td>
                                <td><%= item.name %></td>
                                <td>$<%= item.price %></td>
                                <td><%= item.qty %></td>
                                <td>$<%= item.price * item.qty %></td>
                                <td>
                                    <a href="/cart/remove/<%= item._id %>" class="btn btn-danger btn-sm">&times; Remove</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>

                <div class="d-flex justify-content-end align-items-center mt-3">
                    <h4 class="me-4">Total: $<%= totalPrice.toFixed(2) %></h4>
                    <a href="/checkout" class="btn btn-success btn-lg">Proceed to Checkout</a>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="alert alert-info text-center p-5">
            <h4>Your cart is empty!</h4>
            <a href="/" class="btn btn-primary mt-3">Go Shopping</a>
        </div>
    <% } %>
</div>

<%- include('./partials/footer') %>