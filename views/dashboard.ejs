<%- include('./partials/header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">My Profile</h5>
                </div>
                <div class="card-body text-center">
                    <img src="https://ui-avatars.com/api/?name=<%= user.name %>&background=random" class="rounded-circle mb-3" width="100">
                    <h4><%= user.name %></h4>
                    <p class="text-muted"><%= user.email %></p>
                    <hr>
                    <div class="d-grid gap-2">
                        <% if(user.isAdmin) { %>
                            <a href="/admin" class="btn btn-danger">Access Admin Panel</a>
                        <% } %>
                        <a href="/logout" class="btn btn-outline-dark">Logout</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Order History</h5>
                </div>
                <div class="card-body">
                    <% if (orders && orders.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Date</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Items</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% orders.forEach(order => { %>
                                        <tr>
                                            <td><small class="text-muted">#<%= order._id.toString().substring(0, 8) %>...</small></td>
                                            <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                                            <td>$<%= order.totalAmount %></td>
                                            <td>
                                                <span class="badge bg-success"><%= order.status %></span>
                                            </td>
                                            <td>
                                                <ul class="list-unstyled mb-0">
                                                    <% order.items.forEach(item => { %>
                                                        <li><small><%= item.qty %>x <%= item.name %></small></li>
                                                    <% }) %>
                                                </ul>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <h3 class="text-muted">No orders yet</h3>
                            <p>Once you purchase items, they will appear here.</p>
                            <a href="/" class="btn btn-primary">Start Shopping</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>