<%- include('./partials/header') %>

<div class="jumbotron p-5 rounded bg-light mb-4">
    <h1 class="display-4">Welcome to ShopApp</h1>
    <p class="lead">The best products at the best prices.</p>
</div>

<h3 class="mb-3">Featured Products</h3>
<div class="row">
    <% if (products.length > 0) { %>
        <% products.forEach(function(product) { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="text-muted"><%= product.category %></p>
                        <p class="card-text"><%= product.description.substring(0, 50) %>...</p>
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0 text-primary">$<%= product.price %></span>
                            <form action="/cart/add" method="POST">
                                <input type="hidden" name="product_id" value="<%= product._id %>">
                                <button type="submit" class="btn btn-outline-primary btn-sm">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div class="col-12">
            <div class="alert alert-warning text-center">
                No products found! Login as Admin to add some.
            </div>
        </div>
    <% } %>
</div>

<%- include('./partials/footer') %>